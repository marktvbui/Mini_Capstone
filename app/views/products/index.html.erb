<h1 class="page-header"><%= @page_title %></h1>

  <% Category.all.each do |category| %>
    <%= link_to "Category: #{category.name}", "/products?category=#{category.name}" %>
  <br>




  <% end %>
  <%= link_to "Sort by Price", "/products?sort=price" %>
  <br>
  <%= link_to "Sort by Name", "/products?sort=name" %>

  

  <center>
  <%= form_tag "/search", method: :post do %>
    <%= label_tag :search %>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  <% end %>
  </center>

  <div class="subtitle">Best place to find GoT replica weapons!</div>

  <div class="row"></div>

  <% @products.each do |product| %>

      <div class="col-md-4">
          <div class="well">
           <div class="name"><%= link_to product.name, "/products/#{product.id}/edit" %></div>
          <div class="description"><%= product.description %></div>
          <div class="price">$<%= product.price %></div>
          <%= image_tag product.images.first.url, class: "img-class" %>      
           <a href="/products/<%= product.id %>"> <img src="http://brandonmull.com/site/wp-content/uploads/2015/09/flaming-sword.png" class="img-responsive" alt="Responsive image"></a>
           </div>

      </div>
  <% end %>
<br>
<br>
  <div>
  <footer class="footer">Total number of visitors: <% @session_counter %></footer>
  </div>

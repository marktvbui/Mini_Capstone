  </a>
</div>


<div class="page-header"><%= @page_title %></div>


<h1 class="subtitle">Best place to find GoT replica weapons!</h1>

<div class="row"></div>

<% @products.each do |product| %>

    <div class="col-md-4">
        <div class="border">
         <div class="name"><%= link_to product.name, "/products/#{product.id}" %></div>

        <div class="description"><%= product.description %></div>
        <div class="price">$<%= product.price %></div>
        <%= image_tag product.image, class: "img-class" %>
         
         <a href="/products/<%= product.id %>"> <img src="http://brandonmull.com/site/wp-content/uploads/2015/09/flaming-sword.png" class="img-responsive" alt="Responsive image"></a></div>


    </div>



<% end %>
<h1><%= @product.description %></h1>

  <% if @product.sale_message == "Discount Item!" %>
    <h1 class="color1">Discount Item!</h1>
    <% else %>
    <h1 class="color2">Sale Item!</h1>
  <% end %>

<!-- 
<h1 class="sale_message"><%= @product.sale_message %></h1> -->

  <h3>Price: <%= @product.price %></h3>
  <h3>Taxes: <%= @product.tax.round(2) %></h3>
  <h3>Total: <%= @product.total %></h3>
  <h3>In stock: <%= @product.instock %></h3>
  <h3>Supplier: <%= @product.supplier.name %></h3>

  <div class="name"><a href="/<%= @product.name.downcase %>"><%= @product.name %></a></div>  


<div id="myCarousel" class="carousel slide carousel_size" data-ride="carousel" data-pause="hover">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <% (@product.images.length - 1).times do |i| %>
    <li data-target="#myCarousel" data-slide-to="<%= i + 1 %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @product.images.each_with_index do |image, i| %>
    <div class="<%= i == 0 ? 'item active' : 'item' %>">
    <!--   <center> -->
        <img src=<%= image.url %> class: "img-class" alt=":)">
     <!--  </center> -->
    </div>
    <% end %>
 
   
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>





<div>
  <%= link_to "Edit Product", "/products/#{@product.id}/edit" %>
</div>


<div>
  <%= link_to "Delete Product", "/products/#{@product.id}", method: :delete %>
</div>

<h6> Added: <%= @product.pretty_time %></h6>


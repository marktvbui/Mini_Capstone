<h1><%= @product.description %></h1>
<h3><%= @product.price %></h3>
<div class="name"><a href="/<%= @product.name.downcase %>"><%= @product.name %></a></div>  
<%= image_tag @product.image, class: "img-class" %>

<div>
<%= link_to "Edit Product", "/products/#{@product.id}/edit" %>
</div>

<div>
<%= link_to "Delete Product", "/products/#{@product.id}", method: :delete %>
</div>